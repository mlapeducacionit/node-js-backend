<div class="min-h-screen flex items-center justify-center bg-gray-100">

    <form action="/formu-login" method="POST" class="w-full max-w-sm bg-white p-6 rounded-xl shadow-md space-y-5">

        <!-- Input Correo -->
        <div>
            <label for="lbl-correo" class="block text-sm font-medium text-gray-700 text-center">Correo</label>
            <input type="text" name="correo" id="lbl-correo" class="w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>


        <!-- Input Password -->
         <div>
            <label for="lbl-password" class="block text-sm font-medium text-gray-700 text-center">Contraseña</label>
            <input type="text" name="password" id="lbl-password" class="w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <!-- Botón de submit -->

        <button type="submit" class="w-full py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium cursor-pointer rounded-lg shadow-sm transition">
            Ingresar
        </button>

    </form>

</div>
